<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar android:id="@+id/toolbar" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content" app:title="发布返程车" app:popupTheme="@style/ThemeOverlay.AppCompat.Light" app:navigationIcon="@mipmap/icon_back_white" app:titleTextColor="@color/color_ffffff" app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <LinearLayout android:orientation="vertical" android:background="@color/color_ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/tcb_return_type_rl" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="48dp">
            <TextView android:textSize="16sp" android:textColor="@color/txt_title_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="拖车类型" android:layout_centerVertical="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/txt_info_color" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/tcb_return_type_txt" android:layout_width="match_parent" android:layout_height="wrap_content" android:minWidth="60dp" android:text="3吨班车" android:maxLength="10" android:drawableRight="@mipmap/icon_arrow" android:drawablePadding="5dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/common_line_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp"/>
        <RelativeLayout android:id="@+id/tcb_return_begin_loc_rl" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="48dp">
            <TextView android:textSize="16sp" android:textColor="@color/txt_title_color" android:id="@+id/txt_begin_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="起点" android:layout_centerVertical="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/txt_info_color" android:ellipsize="end" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/tcb_return_begin_loc_txt" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:minWidth="60dp" android:text="输入起点" android:maxEms="15" android:singleLine="true" android:drawableRight="@mipmap/icon_position" android:drawablePadding="5dp" android:layout_toLeftOf="@+id/txt_begin_desc" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/common_line_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp"/>
        <RelativeLayout android:id="@+id/tcb_return_end_loc_rl" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="48dp">
            <TextView android:textSize="16sp" android:textColor="@color/txt_title_color" android:id="@+id/txt_end_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="终点" android:layout_centerVertical="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/txt_info_color" android:ellipsize="end" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/tcb_return_end_loc_txt" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="60dp" android:text="输入终点" android:maxEms="15" android:singleLine="true" android:drawableRight="@mipmap/icon_position" android:drawablePadding="5dp" android:layout_toLeftOf="@+id/txt_end_desc" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/common_line_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp"/>
        <RelativeLayout android:id="@+id/tcb_return_time_rl" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="48dp">
            <TextView android:textSize="16sp" android:textColor="@color/txt_title_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="出发时间" android:layout_centerVertical="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/txt_info_color" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/tcb_return_time_txt" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:minWidth="60dp" android:drawableRight="@mipmap/icon_arrow" android:drawablePadding="5dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/common_line_color" android:layout_width="match_parent" android:layout_height="1dp"/>
    </LinearLayout>
    <Button android:enabled="true" android:gravity="center" android:id="@+id/sure" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="30dp" android:layout_marginTop="30dp" android:layout_marginRight="30dp" android:text="确定" style="@style/LoginRedBtn"/>
</LinearLayout>
