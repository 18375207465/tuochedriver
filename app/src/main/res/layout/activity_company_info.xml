<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/activity_bg_color" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar android:id="@+id/toolbar" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content" app:title="公司信息" app:popupTheme="@style/ThemeOverlay.AppCompat.Light" app:navigationIcon="@mipmap/icon_back_white" app:titleTextColor="@color/color_ffffff" app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <LinearLayout android:orientation="vertical" android:background="@color/color_ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/rl_company_name" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="48dp">
            <TextView android:textSize="16sp" android:textColor="@color/txt_title_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="公司名称" android:layout_centerVertical="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/txt_info_color" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/txt_company_name" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:minWidth="60dp" android:drawableRight="@mipmap/icon_arrow" android:drawablePadding="8dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/common_line_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp"/>
        <RelativeLayout android:id="@+id/txt_position_rl" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="48dp">
            <TextView android:textSize="16sp" android:textColor="@color/txt_title_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="公司地址" android:layout_centerVertical="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/txt_info_color" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/tcb_position_txt" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:minWidth="60dp" android:drawableRight="@mipmap/icon_position" android:drawablePadding="8dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View android:background="@color/common_line_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp"/>
        <RelativeLayout android:id="@+id/rl_admin_name" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="48dp">
            <TextView android:textSize="16sp" android:textColor="@color/txt_title_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="法人" android:layout_centerVertical="true"/>
            <TextView android:textSize="16sp" android:textColor="@color/txt_info_color" android:gravity="right|center_vertical|center_horizontal|center" android:id="@+id/txt_admin_name" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:minWidth="60dp" android:drawableRight="@mipmap/icon_arrow" android:drawablePadding="8dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:background="@color/common_line_color" android:layout_width="match_parent" android:layout_height="1dp"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="12dp" android:text="上传营业执照"/>
    <ImageView android:layout_gravity="center_horizontal" android:id="@+id/img_zhizhao" android:layout_width="match_parent" android:layout_height="150dp" android:layout_marginLeft="12dp" android:layout_marginTop="12dp" android:layout_marginRight="12dp" android:src="@mipmap/basemap" android:scaleType="centerCrop"/>
    <Button android:enabled="true" android:gravity="center" android:id="@+id/submit" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="30dp" android:layout_marginTop="30dp" android:layout_marginRight="30dp" android:text="提交审核" style="@style/LoginRedBtn"/>
</LinearLayout>
