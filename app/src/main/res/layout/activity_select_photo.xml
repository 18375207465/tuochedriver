        <TextView android:textSize="22sp" android:textColor="@color/txt_title_color" android:gravity="left" android:id="@+id/tv_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:layout_marginTop="12dp" android:layout_marginBottom="12dp" android:text="修改头像"/>
