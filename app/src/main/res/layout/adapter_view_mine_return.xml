<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:background="@color/activity_bg_color" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/color_ffffff" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="15dp">
            <TextView android:textSize="@dimen/txt_size_16sp" android:textColor="@color/txt_info_color" android:layout_width="80dp" android:layout_height="wrap_content" android:text="拖车类型"/>
            <TextView android:textSize="@dimen/txt_size_16sp" android:id="@+id/txt_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5吨板车"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="10dp">
            <TextView android:textSize="@dimen/txt_size_16sp" android:textColor="@color/txt_info_color" android:layout_width="80dp" android:layout_height="wrap_content" android:text="出发时间"/>
            <TextView android:textSize="@dimen/txt_size_16sp" android:id="@+id/txt_go_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" 2017年03月20日 12:00:00"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="10dp">
            <TextView android:textSize="@dimen/txt_size_16sp" android:textColor="@color/txt_info_color" android:layout_width="80dp" android:layout_height="wrap_content" android:text="起点"/>
            <TextView android:textSize="@dimen/txt_size_16sp" android:id="@+id/txt_from_loc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="四川省郫县"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="10dp">
            <TextView android:textSize="@dimen/txt_size_16sp" android:textColor="@color/txt_info_color" android:layout_width="80dp" android:layout_height="wrap_content" android:text="终点"/>
            <TextView android:textSize="@dimen/txt_size_16sp" android:id="@+id/txt_destination_loc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="武侯立交信丽花园"/>
        </LinearLayout>
        <View android:background="@color/common_line_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="15dp"/>
        <RelativeLayout android:gravity="center_vertical" android:id="@+id/rl_delete" android:background="@color/color_ffffff" android:layout_width="match_parent" android:layout_height="40dp">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <TextView android:textSize="@dimen/txt_size_14sp" android:textColor="@color/color_ffffff" android:id="@+id/txt_btn_edit" android:background="@drawable/bg_common_red_btn" android:paddingLeft="12dp" android:paddingTop="7dp" android:paddingRight="12dp" android:paddingBottom="7dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="12dp" android:text="编辑"/>
                <TextView android:textSize="@dimen/txt_size_14sp" android:textColor="@color/color_ffffff" android:id="@+id/txt_btn_delete" android:background="@drawable/bg_common_red_btn" android:paddingLeft="12dp" android:paddingTop="7dp" android:paddingRight="12dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="删除"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
